<div class="box">
  <div id="form">
<h1>Sign In</h1>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<%= form_tag("/signin", method: "post") do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <p>Email Address: <%= text_field_tag :email %></p>
  <p>Password: <%= password_field_tag :password %></p><br>
  <%= submit_tag "Sign In"%>
<% end %>
<br>
<p> OR </p>

<%= link_to "Log In with Facebook", "/auth/facebook" %>
  </div>
</div>