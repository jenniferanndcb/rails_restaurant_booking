<div id="form">
<h1>Sign Up with DineOut</h1>
<%= form_for @user do |f|%>
  <%= f.label :first_name, "Tell us your first name" %><br>
  <%= f.text_field :first_name %> <br>

  <%= f.label :email, "E-mail Address" %><br>
  <%= f.text_field :email %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <%= f.label :admin, "Are you a restaurant owner and would like to add your restaurant?" %>
  <%= f.check_box :admin %><br>


  <%= f.submit "Sign Up"%>

  <% end %>
</div>